<p id="notice"><%= notice %></p>

<%= link_to 'Back', root_path %>

<h1>Borrowed Books</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>User</th>
      <th>Returning at</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowed_books.each do |borrowed_book| %>
      <tr class="<%= "late" if borrowed_book.late? %>" >
        <td><%= borrowed_book.book.name %></td>
        <td><%= borrowed_book.user.full_name %></td>
        <td><%= borrowed_book.returning_at %></td>
        <td><%= link_to 'Show', borrowed_book %></td>
        <td><%= link_to 'Return', borrowed_book, method: :delete, data: { confirm: 'Are you sure to return this book?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Borrowed Book', new_borrowed_book_path %>
